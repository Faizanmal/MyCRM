# PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️ WARNING: DO NOT commit this file to version control!
# Copy this template to .env.production and fill in all values

# Django Settings
DEBUG=False
SECRET_KEY=GENERATE_SECURE_KEY_WITH_openssl_rand_hex_50
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=mycrm_production
DATABASE_USER=mycrm_prod_user
DATABASE_PASSWORD=SECURE_DATABASE_PASSWORD_HERE
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=SECURE_REDIS_PASSWORD_HERE
REDIS_URL=redis://:SECURE_REDIS_PASSWORD_HERE@redis:6379/0

# CORS Settings (Production domains only)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SendGrid (Alternative - Recommended for Production)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_SIGNING_KEY=GENERATE_SEPARATE_JWT_KEY_HERE

# Security Settings (Production)
ENCRYPTION_KEY=GENERATE_WITH_python_cryptography_Fernet_generate_key
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Sentry (Error Tracking - RECOMMENDED)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Celery Configuration
CELERY_BROKER_URL=redis://:SECURE_REDIS_PASSWORD_HERE@redis:6379/0
CELERY_RESULT_BACKEND=redis://:SECURE_REDIS_PASSWORD_HERE@redis:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=10485760

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
DEFAULT_RATE_LIMIT=100
ADMIN_RATE_LIMIT=1000

# OAuth/SSO Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com
SSO_SESSION_TIMEOUT=3600

# Enterprise Features
ENABLE_WORKFLOWS=True
ENABLE_INTEGRATIONS=True
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_COMPLIANCE_REPORTING=True

# Audit Configuration
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=365
BACKUP_RETENTION_DAYS=90
SESSION_TIMEOUT_MINUTES=120

# Domain Configuration
DOMAIN=yourdomain.com
